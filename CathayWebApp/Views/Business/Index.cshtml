@{
    ViewData["PageTitle"] = "Business Banking - " + (ViewData["lang"] as string == "zh-hant" ? "企業金融" : ViewData["lang"] as string == "en" ? "Business Banking" : "ធនាគារអាជីវកម្ម");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>@ViewData["PageTitle"]</h1>
    
    @{
        var language = ViewData["lang"] as string ?? "zh-hant";
    }
    
    @if (language == "zh-hant")
    {
        <div class="content-zh-hant">
            <h2>企業金融服務</h2>
            <p>國泰世華銀行為企業客戶提供全方位的金融服務，包括存款、貸款、匯款等業務。</p>
            <ul>
                <li><a href="@ViewData["siteLangUrl"]business/current-account/">活期存款帳戶</a></li>
                <li><a href="@ViewData["siteLangUrl"]business/business-savings-account/">企業儲蓄帳戶</a></li>
                <li><a href="@ViewData["siteLangUrl"]business/commercial-loan/">商業貸款</a></li>
                <li><a href="@ViewData["siteLangUrl"]business/remittance/">匯款服務</a></li>
            </ul>
        </div>
    }
    else if (language == "en")
    {
        <div class="content-en">
            <h2>Business Banking Services</h2>
            <p>Cathay United Bank provides comprehensive financial services for business customers, including deposits, loans, remittances and more.</p>
            <ul>
                <li><a href="@ViewData["siteLangUrl"]business/current-account/">Current Account</a></li>
                <li><a href="@ViewData["siteLangUrl"]business/business-savings-account/">Business Savings Account</a></li>
                <li><a href="@ViewData["siteLangUrl"]business/commercial-loan/">Commercial Loan</a></li>
                <li><a href="@ViewData["siteLangUrl"]business/remittance/">Remittance</a></li>
            </ul>
        </div>
    }
    else
    {
        <div class="content-km">
            <h2>សេវាកម្មធនាគារអាជីវកម្ម</h2>
            <p>ធនាគារ Cathay United ផ្តល់សេវាកម្មហិរញ្ញវត្ថុទូលំទូលាយសម្រាប់អតិថិជនអាជីវកម្ម រួមទាំងប្រាក់បញ្ញើ ប្រាក់កម្ចី ការផ្ញើប្រាក់ និងសេវាកម្មផ្សេងទៀត។</p>
            <ul>
                <li><a href="@ViewData["siteLangUrl"]business/current-account/">គណនីចរន្ត</a></li>
                <li><a href="@ViewData["siteLangUrl"]business/business-savings-account/">គណនីសន្សំអាជីវកម្ម</a></li>
                <li><a href="@ViewData["siteLangUrl"]business/commercial-loan/">ប្រាក់កម្ចីពាណិជ្ជកម្ម</a></li>
                <li><a href="@ViewData["siteLangUrl"]business/remittance/">សេវាកម្មផ្ញើប្រាក់</a></li>
            </ul>
        </div>
    }
</div>
