@model IndexViewModel

@if (ViewBag.lang == "zh-hant-other")
{
    ViewBag.PageTitle = "人才招募";
    ViewBag.PageDescription = "";
}
else
{
    ViewBag.PageTitle = "Careers - Vice President, Relationship Management - Private Wealth Management";
    ViewBag.PageDescription = "";
}


@section Scripts {}
@if (ViewBag.lang == "zh-hant-other")
{
}
else
{
    <div class='component-oversea-kv-short'>
        <div class="coks-inner">
            <div class="coks-content">
                <h1 class='coks-title'>Careers</h1>
            </div>
            <figure class='coks-figure'>
                <picture>
                    <source media='(min-width: 768px)'
                            srcset='@Url.Content("~/OVSWS/Content/img/hongkong/kv-short/careers-lg.jpg")' />
                    <img class='coks-img' src='@Url.Content("~/OVSWS/Content/img/hongkong/kv-short/careers.jpg")' alt='Careers'>
                </picture>
                <figcaption hidden>Careers</figcaption>
            </figure>
        </div>
    </div>

    <div class='component-oversea-careers-detail'>
        <div class="cocd-inner">
            <h1 class='cocd-title'>
                Vice President, Relationship Management, Private Banking
            </h1>
            <div class='cocd-content-wrap'>
                <h2 class='cocd-content-title'>Responsibilities:</h2>
                <ul class='cocd-content-ul'>
                    <li class='cocd-content-li'>Acquire and develop new Ultra High Net Worth Individuals and solicit business opportunities through cross-selling, referral and personal business connections</li>
                    <li class='cocd-content-li'>Maintain client relationships with good service quality and ensure thorough KYC is conducted in compliance with regulatory requirement</li>
                    <li class='cocd-content-li'>Identify clients’ investment needs.  Advise and provide customized private wealth management solutions which meets client’s investment objectives and corresponding risk profile</li>
                    <li class='cocd-content-li'>Aspire to achieve individual performance objectives as well as upholding corporate and compliance culture</li>
                    <li class='cocd-content-li'>Strict adherence to internal and external regulatory requirements.</li>
                </ul>
            </div>

            <div class='cocd-content-wrap'>
                <h2 class='cocd-content-title'>Ideal candidates should possess:</h2>
                <ul class='cocd-content-ul'>

                    <li class='cocd-content-li'>Degree holder in Finance, Economic, Business or relevant disciplines preferred</li>
                    <li class='cocd-content-li'>At least 5 years’ Relationship Manager or Investment Advisor experience in private banking or ultra-high net worth clients sector, experience in Taiwanese market a definite advantage</li>
                    <li class='cocd-content-li'>Pass in the HKSI Licensing Examination and qualified under SFO for handling Regulated Activities Type 1 (dealing in securities) & Type 4 (advising on securities)</li>
                    <li class='cocd-content-li'>Knowledge of private banking and treasury services, good understanding of banking operations and regulatory requirements</li>
                    <li class='cocd-content-li'>Self-initiated and a strong team player</li>
                    <li class='cocd-content-li'>Good communication and interpersonal skills</li>
                    <li class='cocd-content-li'>Fluent in Mandarin, Cantonese and English</li>
                </ul>
            </div>
            <div class='cocd-btn-wrap'>
                <a href="@Url.Content("~/hongkong/en/careers/jobs")" class="cocd-btn">Back</a>
            </div>
        </div>
    </div>


    




}
@RenderPage("../careers-support-card.cshtml")