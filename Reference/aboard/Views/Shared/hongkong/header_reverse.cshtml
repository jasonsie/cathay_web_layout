@{ 
  
    if (ViewBag.section == "home/")
    {
        ViewBag.section = "";
    }
}
<!-- component-header -->
<header class="component-header">
    <nav class="ch-navbar">
        <div class="ch-brand-wrap">
            <a href="@Url.Content("~/"+@ViewBag.country_url+"/"+@ViewBag.lang_url)" class="ch-brand" title='@ViewBag.site_name'>
                <figure class='ch-figure'>
                    <picture>
                        <source media='(min-width: 992px)' srcset='@Url.Content("~/OVSWS/Content/img/hongkong/header/logo-lg.svg")' />
                        <img class='ch-img' normal-src='@Url.Content("~/OVSWS/Content/img/hongkong/header/logo.svg")' active-src='@Url.Content("~/OVSWS/Content/img/hongkong/header/logo-white.svg")' src='@Url.Content("~/OVSWS/Content/img/hongkong/header/logo.svg")' alt='國泰世華銀行香港分行'>
                    </picture>
                    <figcaption hidden>@ViewBag.site_name</figcaption>
                </figure>
            </a>
            <ul class='ch-subnav-list'>                
                <li class='ch-subnav-item'>
                    <div class="language-form">
                        <select role="language-select" class='form-select'>
                            @if (ViewBag.lang == "en")
                            {
                                <option value="@Url.Content("~/"+@ViewBag.country_url+"/"+@ViewBag.city_url+"/en/"+@ViewBag.section+@ViewBag.subsection+"")">English</option>
                                <option value="@Url.Content("~/"+@ViewBag.country_url+"/"+@ViewBag.city_url+@ViewBag.section+@ViewBag.subsection+"")">繁體中文</option>
                            }
                            else
                            {
                                <option value="@Url.Content("~/"+@ViewBag.country_url+"/"+@ViewBag.city_url+@ViewBag.section+@ViewBag.subsection+"")">繁體中文</option>
                                <option value="@Url.Content("~/"+@ViewBag.country_url+"/"+@ViewBag.city_url+"/en/"+@ViewBag.section+@ViewBag.subsection+"")">English</option>
                            }
                        </select>
                    </div>
                </li>
            </ul>
        </div>

                
        <div class="ch-nav">
            <ul class="ch-nav-list">
                <li class="ch-nav-item ch-nav-item--align-right ch-nav-item--block" style="margin-left:auto;">
                    <div style="height:56px"></div>
                </li>

                <li class="ch-nav-item ch-nav-item--block">
                    <div style="height:56px"></div>
                </li>

            </ul>
        </div>
    </nav>
</header>
<!-- component-header end -->
