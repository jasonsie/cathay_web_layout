	<!--
		Careers - Detail
	-->
	<section class="fluid overflow-hidden">
		<div class="py-page"></div>
		
		<!-- Page heading -->
		<header class="compact  mb-5  text-center">
			<h2 class="display-3 h1-mb  mb-3  text-green-dark fw-bold">Senior Officer, Accounting</h2>
		</header>
		
		<section class="compact">
			<!-- Gray container -->
			<div class="bg-gray-100  py-5  px-3 px-sm-4 px-lg-5">
				<!-- Section heading -->
				<h3 class="h1 h2-mb  mb-4  text-gold fw-bold text-center lh-sm">Key Responsibilities</h3>
			
                <ul class="list-disc">
					<li class="mb-2">Prepare, reconcile, and analyze accounting records with proper explanation for management</li>
					<li class="mb-2">Prepare and check monthly tax declaration also assist in preparing document for tax reassessment </li>
					<li class="mb-2">Prepare SOP as required and enhance accounting system or report  </li>
					<li class="mb-2">Manage and maintain fixed assets system </li>
					<li class="mb-2">Assist in preparing monthly NBC, financial statement reports</li>
					<li class="mb-2">Prepare annual budget control against actual expenditures</li>
					<li class="mb-2">Host meeting with corresponding report preparation </li>
					<li class="mb-2">Other duties as assigned by supervisor</li>
                </ul>
			</div>
		</section>
		
		<div class="py-section"></div>
		
		
		<section class="compact">
			<!-- Gray container -->
			<div class="bg-gray-100  py-5  px-3 px-sm-4 px-lg-5">
				<!-- Section heading -->
				<h3 class="h1 h2-mb  mb-4  text-gold fw-bold text-center lh-sm">Minimum Requirements</h3>
			
				<ul class="list-disc">
					<li class="mb-2">Holding bachelor degree or above in Accounting, Banking & Finance, or equivalent with minimum 2-year experience in Banking Industry, MFI, or Accounting firm</li>
					<li class="mb-2">Knowledge of banking industry, banking operation, IFRS and Tax</li>
					<li class="mb-2">A good team player and proactive personnel</li>
					<li class="mb-2">Possess a positive attitude, mature, friendly, highly initiative with a strong sense of responsibility</li>
					<li class="mb-2">Be well manner and honest personality</li>
					<li class="mb-2">Keen to learn new thing, willingness to accept new jobs as assigned and critical thinking are required</li>
					<li class="mb-2">Good in English with ability to communicate, Mandarin is a plus</li>
					<li class="mb-2">Specialized in Excel, Power-point, and MS Word</li>
				</ul>
			</div>
		</section>
		
		<div class="text-center mt-4">
			<a class="btn btn-green" href="@ViewData["siteLangUrl"]careers/#job-openings">
				<span class="px-2">Other job openings<i class="ico-ui-right-v ml-2 big"></i></span>
			</a>
		</div>

