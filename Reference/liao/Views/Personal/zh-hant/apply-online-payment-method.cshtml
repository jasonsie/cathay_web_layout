@model CathayBankKh.Models.ApplyOnlinePaymentMethodModel

@{
	Layout = null;
}

<section>
	<!--
		Form - Payment Method
	-->
	<!-- Section heading -->
	<h3 class="h1 h2-mb  mb-4  text-black fw-bold lh-sm">Payment Method</h3>

	<!-- Gray container -->
	<div class="bg-gray-100  p-3 p-md-4">

		<!-- Form fields START -->
		<p class="font-weight-bold display-6 mb-3">Auto Pay/monthly debiting from CUBC Bank account</p>
		<div class="form-row">
			<div class="form-group col-md-6">
				<label>Please choose your Auto Pay</label>
				<div class="d-flex pt-md-2">
					<div class="mr-3">
						<input type="radio" id="fullPayment" name="paymentMethod" value="Full Payment" required>
						<label for="fullPayment">Full Payment</label>
					</div>
					<div class="mr-3">
						<input type="radio" id="minimunPayment" name="paymentMethod" value="Minimun Payment" required>
						<label for="minimunPayment">Minimun Payment</label>
					</div>
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="accountNo">Auto Pay will accepted only CUBC Account Number</label>
				<input type="text" class="form-control" id="accountNo" placeholder="Account Number" pattern="^[0-9]{0,20}$" maxlength="20">
				<div class="invalid-feedback">Please check your input data.</div>
			</div>
		</div>
	</div>

	<div class="text-center my-4">
		<button type="button" class="btn btn-outline-green mr-3" id="goPrevToFilesUploadBtn" ">
			<span class="px-2"><i class="ico-ui-left-v mr-2 big"></i>Previous Step</span>
		</button>
		<button type="button" class="btn btn-green" id="goNextToTermsPageBtn">
			<span class="px-2">Next Step<i class="ico-ui-right-v ml-2 big"></i></span>
		</button>
	</div>


</section>
<!-- Page END -->