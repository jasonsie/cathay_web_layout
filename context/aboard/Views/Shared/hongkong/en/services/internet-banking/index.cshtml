            myFaq.getData('online-banking');
            // myFaq.getData('information-security');
            // myFaq.getData('derivatives');


            var myDownload = download.prototype;
            myDownload.init();
            myDownload.getData('online-banking');
            $('.component-oversea-downloads').addClass('component-bg--white')
            $('.component-oversea-faq').removeClass('component-bg--white')
        })
    </script>
}


