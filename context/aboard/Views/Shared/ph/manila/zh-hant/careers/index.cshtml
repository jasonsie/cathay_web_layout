        <div class='coi-inner'>
            <h2 class='coi-title'>Service Address</h2>

            <div class='coi-content'>
                <ul class="coi-list">
                    <li class="coi-item">
                        <span class='coi-item-label'>Address:</span>
                        <span class="coi-item-content">4F., Viettel Quang Nam Building, No.121 Hung Vuong Street, Tam Ky City, Quang Nam Province, Vietnam</span>
                    </li>
                    <li class="coi-item">
                        <span class='coi-item-label'>Phone Number:</span>
                        <span class="coi-item-content">+84 0235 3813035~38</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
}

