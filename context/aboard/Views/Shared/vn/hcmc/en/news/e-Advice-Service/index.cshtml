@model IndexViewModel

@{
    ViewBag.PageTitle = "e-Advice Service - New Transaction Type and Function Announcement";
    ViewBag.PageDescription = "";
}
@section Scripts {}

<div class='component-oversea-kv-short'>
    <figure class='coks-figure'>
        <picture>

            <source media='(min-width: 768px)'
                    data-srcset='@Url.Content("~/OVSWS/Content/img/"+@ViewBag.country_url+"/"+@ViewBag.city_url+"/kv-short/news-lg.jpg")' />
            <img class='coks-img lazy' data-src='@Url.Content("~/OVSWS/Content/img/"+@ViewBag.country_url+"/"+@ViewBag.city_url+"/kv-short/news.jpg")' alt='@ViewBag.nav_news'>
        </picture>
        <figcaption hidden>@ViewBag.nav_news</figcaption>
    </figure>
    <div class="coks-inner">
        <div class="coks-content">
            <h1 class='coks-title'>@ViewBag.nav_news</h1>
        </div>
    </div>
</div>

<!-- newsview -->
<article class="component-newsview">
    <div class="component-newsview-inner">
        <header class="component-newsview-header">
            <div class="component-newsview-date"></div>
            <h1 class="component-newsview-title">e-Advice Service - New Transaction Type and Function Announcement</h1>
        </header>

        <div class="component-newsview-body">
            <p>
                Starting from March 10th,  2025, the e-Advice "Deposit and Remittance" Advice Type will include the “ Time Deposit” transaction Advice. <br>

            <p>
                In addition, new users of "Global MyB2B" (currently only applicable to corporate clients) can now quickly activate the e-Advice service and set up the receiving email address through the step-by-step guidance in the system. These features enable the customers to access transaction advices more promptly and conveniently. <br>

            <p>
                We are committed to providing more efficient services to you and look forward to your enjoyment of the convenience brought by these new features. <br>

            <p>If you have any questions regarding the e-Advice service, please feel free to contact your relationship manager or call our customer service hotline at +84-28-3825-8768. <br>

        </div>

        <footer class="component-newsview-footer">
            <div class="component-btn-row">
                <a class="component-btn-main btn-green" href="@Url.Content("~/"+@ViewBag.country_url+"/"+@ViewBag.city_url+"/"+@ViewBag.lang_url+"/news/")">Back</a>
            </div>
        </footer>
    </div>
</article><!--/.component-newsview-->