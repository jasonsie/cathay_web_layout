@section Scripts {
	<script>
	$(function(){
		$('.videoModal').on('hidden.bs.modal', function (event) {
			$('[videoIframe]').attr('src','');
		})
		
		$('[videoBtn]').on('click',function(e){
			const elm = $(this);
			$('[videoIframe]').attr('src',elm.attr('href')+"?autoplay=1")
		})
	})
	</script>
}