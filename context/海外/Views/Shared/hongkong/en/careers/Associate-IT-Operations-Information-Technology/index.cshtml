@model IndexViewModel

@if (ViewBag.lang == "zh-hant-other")
{
    ViewBag.PageTitle = "人才招募";
    ViewBag.PageDescription = "";
}
else
{
    ViewBag.PageTitle = "Careers - Vice President, Relationship Management - Private Wealth Management";
    ViewBag.PageDescription = "";
}


@section Scripts {}
@if (ViewBag.lang == "zh-hant-other")
{
}
else
{
    <div class='component-oversea-kv-short'>
        <div class="coks-inner">
            <div class="coks-content">
                <h1 class='coks-title'>Careers</h1>
            </div>
            <figure class='coks-figure'>
                <picture>
                    <source media='(min-width: 768px)'
                            srcset='@Url.Content("~/OVSWS/Content/img/hongkong/kv-short/careers-lg.jpg")' />
                    <img class='coks-img' src='@Url.Content("~/OVSWS/Content/img/hongkong/kv-short/careers.jpg")' alt='Careers'>
                </picture>
                <figcaption hidden>Careers</figcaption>
            </figure>
        </div>
    </div>

    <div class='component-oversea-careers-detail'>
        <div class="cocd-inner">
            <h1 class='cocd-title'>
                Associate, IT Operations
            </h1>
            <div class='cocd-content-wrap'>
                <h2 class='cocd-content-title'>Responsibilities:</h2>
                <ul class='cocd-content-ul'>
                    <li class='cocd-content-li'>Perform daily helpdesk and user computing support</li>
                    <li class='cocd-content-li'>Responsible for the operation service delivery that include fulfilling user requests, resolving service failures, fixing problems, as well as carrying out routine operational tasks</li>
                    <li class='cocd-content-li'>Propose and implement IT operation projects and solutions to improve operational efficiency and performance</li>
                    <li class='cocd-content-li'>Prepare incident report, perform operational risk assessment and setup preventive measures</li>
                    <li class='cocd-content-li'>Support vendor management and procurement processing</li>
                    <li class='cocd-content-li'>Work with headquarter and local Infrastructure and Application teams on end-user projects execution and operational support</li>
                    <li class='cocd-content-li'>Drive for continuous service improvement</li>

                </ul>
            </div>

            <div class='cocd-content-wrap'>
                <h2 class='cocd-content-title'>Ideal candidates should possess:</h2>
                <ul class='cocd-content-ul'>
                    <li class='cocd-content-li'>Higher diploma or above in Computer Science, Information Systems or related disciplines</li>
                    <li class='cocd-content-li'>At least 2 years' relevant working experience in IT system/network operations preferably in banking or financial services industry</li>
                    <li class='cocd-content-li'>Strong coordination, communication and interpersonal skills</li>
                    <li class='cocd-content-li'>Fluent in English and Chinese (Cantonese and Mandarin)</li>
                </ul>
            </div>
            <div class='cocd-btn-wrap'>
                <a href="@Url.Content("~/hongkong/en/careers/jobs")" class="cocd-btn">Back</a>
            </div>
        </div>
    </div>


    




}
@RenderPage("../careers-support-card.cshtml")