@model IndexViewModel


@if (ViewBag.lang == "zh-hant")
{
    ViewBag.PageTitle = "現金管理";
    ViewBag.PageDescription = "";
}
else
{
    ViewBag.PageTitle = "Cash Management";
    ViewBag.PageDescription = "";
}

@section Scripts {
    <script>
        var serviceCard = serviceCard || {};
        serviceCard.prototype = {
            sameHeight: function () {

                let window_w = $(window).width();
                let max_h = 0;
                let scope = $('.component-oversea-services-card');
                $('.cosc-item-content', scope).css('min-height', 0);
                if (window_w >= 768) {
                    $('.cosc-item', scope).each(function () {
                        let h = $('.cosc-item-content', $(this)).height();
                        if (h > max_h) {
                            max_h = h;
                        }
                    })
                    $('.cosc-item-content', scope).height(max_h);
                } else {
                    $('.cosc-item-content', scope).css('height', 'auto');
                }
            },
            addEventListener: function () {
                let o = this;
                $(window).on('resize.homeCard', function () {
                    o.sameHeight();
                }).trigger('resize.homeCard');
            },
            init: function () {
                this.addEventListener();
            }
        }
    </script>

    <script>
        $(function () {

            var myServiceCard = serviceCard.prototype;
            myServiceCard.init();
        })
    </script>
}
<div class='component-oversea-kv-short'>
    <figure class='coks-figure'>
        <picture>

            <source media='(min-width: 768px)'
                    data-srcset='@Url.Content("~/OVSWS/Content/img/"+@ViewBag.country_url+"/"+@ViewBag.city_url+"/kv-short/cash-management-lg.jpg")' />
            <img class='coks-img lazy' data-src='@Url.Content("~/OVSWS/Content/img/"+@ViewBag.country_url+"/"+@ViewBag.city_url+"/kv-short/cash-management.jpg")' alt='@ViewBag.nav_services_cash_management'>
        </picture>
        <figcaption hidden>@ViewBag.nav_services_cash_management</figcaption>
    </figure>
    <div class="coks-inner">
        <div class="coks-content">
            <h1 class='coks-title'>@ViewBag.nav_services_cash_management</h1>
        </div>
    </div>
</div>

@if (ViewBag.lang == "zh-hant")
{
    <div class='component-oversea-services-card'>
        <div class="cosc-inner">
            <h2 class='cosc-title'>@ViewBag.services_title</h2>

            <ul class='cosc-list'>
                <li class='cosc-item'>
                    <figure class='cosc-item-figure'>
                        <picture>
                            <img class='cosc-item-img lazy' data-src='@Url.Content("~/OVSWS/Content/img/sg/services-card/cash-management/current-account.jpg")' alt='活期性存款'>
                        </picture>
                        <figcaption hidden>活期性存款</figcaption>
                    </figure>
                    <div class='cosc-item-content'>
                        <h3 class='cosc-item-title'>活期性存款</h3>
                        <p class='cosc-item-description'>提供當地註冊法人企業、當地居民及外國個人寮幣、美金、泰銖之存款服務，開戶時需依各幣別存入金額（寮幣100萬元、美金100元、泰銖5,000元）。 ※外國個人需具備有效工作證、visa和護照 (台灣人另須出示身分證) 。</p>
                    </div>
                </li>


                <li class='cosc-item'>
                    <figure class='cosc-item-figure'>
                        <picture>
                            <img class='cosc-item-img lazy' data-src='@Url.Content("~/OVSWS/Content/img/sg/services-card/cash-management/time-deposit.jpg")' alt='定期性存款'>
                        </picture>
                        <figcaption hidden>定期性存款</figcaption>
                    </figure>
                    <div class='cosc-item-content'>
                        <h3 class='cosc-item-title'>定期性存款</h3>
                        <p class='cosc-item-description'>各幣別最低存入金額(寮幣1,000萬元、美金1,000元、泰銖50,000元)。</p>
                    </div>
                </li>

            </ul>
        </div>
    </div>
}
else
{
    <div class='component-oversea-services-card'>
        <div class="cosc-inner">
            <h2 class='cosc-title'>@ViewBag.services_title</h2>

            <ul class='cosc-list'>
                <li class='cosc-item'>
                    <figure class='cosc-item-figure'>
                        <picture>
                            <img class='cosc-item-img lazy' data-src='@Url.Content("~/OVSWS/Content/img/sg/services-card/cash-management/current-account.jpg")' alt='Demand deposit'>
                        </picture>
                        <figcaption hidden>Demand deposit</figcaption>
                    </figure>
                    <div class='cosc-item-content'>
                        <h3 class='cosc-item-title'>Demand deposit</h3>
                        <p class='cosc-item-description'>"We offer demand deposits in and LAK, USD, and THB, minimum amounts denominated in respective currencies should be deposited when opening the account (LAK 1,000,000; USD 100; THB 5,000). ※ Deposit for foreign individual requires a valid working permit, visa and passport (ID card is required for Taiwanese residents). "</p>
                    </div>
                </li>

                <li class='cosc-item'>
                    <figure class='cosc-item-figure'>
                        <picture>
                            <img class='cosc-item-img lazy' data-src='@Url.Content("~/OVSWS/Content/img/sg/services-card/cash-management/time-deposit.jpg")' alt='Time Deposit'>
                        </picture>
                        <figcaption hidden>Time Deposit</figcaption>
                    </figure>
                    <div class='cosc-item-content'>
                        <h3 class='cosc-item-title'>Time Deposit</h3>
                        <p class='cosc-item-description'>Minimum amounts denominated in respective currencies should be deposited when opening the account (LAK 10,000,000; USD 1,000; THB 50,000).</p>
                    </div>
                </li>


            </ul>
        </div>
    </div>
}

